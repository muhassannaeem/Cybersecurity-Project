# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# MySQL connection settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=cybersecurity_db
DB_PORT=3306

# =====================================================
# JWT CONFIGURATION
# =====================================================
# Secret key for JWT token generation
# IMPORTANT: Generate a strong random string for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# Token expiration time (examples: 1h, 24h, 7d, 30d)
JWT_EXPIRES_IN=24h

# =====================================================
# SERVER CONFIGURATION
# =====================================================
# Backend server port
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# Bcrypt salt rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=15

# =====================================================
# EMAIL CONFIGURATION (Optional - for future features)
# =====================================================
# SMTP settings for sending emails (password reset, verification, etc.)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=
# EMAIL_PASSWORD=
# EMAIL_FROM=noreply@cybersecurity.com

# =====================================================
# LOGGING CONFIGURATION (Optional)
# =====================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =====================================================
# RATE LIMITING (Optional)
# =====================================================
# Maximum requests per window
RATE_LIMIT_MAX=100

# Time window in minutes
RATE_LIMIT_WINDOW=15
